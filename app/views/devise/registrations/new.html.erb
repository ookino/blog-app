<h1 class='font-mono text-xl font-bold text-gray-700 mb-4'>Sign Up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'flex flex-col gap-6 w-full, font-mono'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'p-3 mt-2 w-full outline outline-1 outline-indigo-300 rounded-lg ' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'p-3 mt-2 w-full outline outline-1 outline-indigo-300 rounded-lg' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'p-3 mt-2 w-full outline outline-1 outline-indigo-300 rounded-lg' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'p-3 mt-2 w-full outline outline-1 outline-indigo-300 rounded-lg' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:'bg-indigo-500 p-3 text-white rounded-lg drop-shadow-md w-full'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
