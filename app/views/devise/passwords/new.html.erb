
<h1 class='font-mono text-xl font-bold text-gray-700 mb-4'>Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'flex flex-col gap-6 w-full, font-mono' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

 <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'p-3 mt-2 w-full outline outline-1 outline-indigo-300 rounded-lg' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:'bg-indigo-500 p-3 text-white rounded-lg drop-shadow-md w-full'  %>
  </div>
<% end %>


